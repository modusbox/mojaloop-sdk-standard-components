{
  "include": [
    "types",
    // "src"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "test",
    "lib",
    "coverage"
  ],
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": [
      "esnext"
    ],
    // "importHelpers": true,
    "declaration": true,
    // "sourceMap": true,
    "rootDir": "./",
    // "outDir": "dist",
    "outFile": "index.d.ts",
    "strict": true,
    "noImplicitAny": true,
    "emitDeclarationOnly": true,

    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": [
        "src/*",
        "node_modules/*"
      ]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true

    // "noEmit": false,
    // "declaration": true,
    // "moduleResolution": "node",
    // "allowJs": true,
    // "checkJs": true,
    // "strict": false,
    // "noImplicitThis": true,
    // "alwaysStrict": true,
    // // "types": [
    // //   "mocha"
    // // ],
    // "esModuleInterop": true
  }
}
